.category-large{
	position:fixed;
	width:160rpx;
	height:100%;
	overflow-y:auto;
	overflow-x:hidden;
	background-color:#F8F8F8;
	border-top:1px solid #DDDDDD;	
	word-wrap: break-word;
  word-break: break-all;
}

.category-large .large-title{
	font-size:14px;
	color:#333333;
	text-align:center;
	padding:30rpx 0;
}

.category-large .large-title.active{
	color:#E4393C;
	background-color:#FFFFFF;
}

.category-small{
	clear:both;
	position:fixed;
	left:160rpx;
	top:0;
	height:100%;
	overflow-y:auto;
	overflow-x:hidden;
	background-color:#FFFFFF;
	border-top:1px solid #DDDDDD;	
	word-wrap: break-word;
  word-break: break-all;
  padding:40rpx 0 0 60rpx;
}

.category-small .category-item{
	float:left;
	width:120rpx;
	height:160rpx;
	font-size:12px;
	color:#333333;
	text-align:center;
	margin:0 60rpx 40rpx 0;
}

.category-small  .category-item .category-cover{
	height:80rpx;
	padding:20rpx;
}

.category-small .category-cover image{
	width:100%;
	height:100%;
}

.category-small .category-small-title{
	text-align:center;
	padding:10rpx 0;
}