.topbar{
	background-color:#C81623;
	text-align:center;
	padding:0 20rpx 20rpx 20rpx;
}

.topbar .logo{
	margin:0 0 20rpx;
	width:280rpx;
	height:74rpx;
}

.topbar .search-btn{
	background-color:#fff;
	color:#ccc;
	font-size:14px;
	height:70rpx;
	line-height:70rpx;
	border-radius:60rpx;
}

.topbar .search-btn .search-icon{
	display:inline-block;
	margin-top:7px;
	vertical-align:top;
}

.menus{
	background-color:#FFFFFF;
	color:#666666;
	margin-bottom:20rpx;
	padding:25rpx 0;
}

.menus .menu-item{
	text-align:center;
	font-size:12px;
}

.menus .menu-icon{
	width:54rpx;
	height:54rpx;
	margin-bottom:5rpx;
}

.hot-area{
	background-color:#FFFFFF;
	min-height:800rpx;
}


























