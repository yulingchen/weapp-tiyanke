.clearfix{
  display: inline-block;
}
.clearfix::after{
  display: block;
  content: '.';
  height: 0;
  line-height: 0;
  clear: both;
  visibility: hidden;
}
.share{
  background: #fff;
  font-size:9px;
}
.header{
  width:100%;
  height: 275px;
  position: relative;
}
.header .avatar{
  position: absolute;
  right:14px;
  bottom:0px;
}
.content-wrp{
  padding: 14px 11px 9px 11px;
  border-bottom: 1px solid #ccc;
}
.content-wrp .avatar{
  display: inline-block;
  vertical-align: top;
  margin-right: 9px;
}
.content-wrp .content{
  display: inline-block;
}
.content-wrp .content .author{
  display: inline-block;
  line-height: 21px;
  font-size:14px;
  color:#576B95;
  font-family: Arial, Helvetica, sans-serif;
}

.content-wrp .content .decription{
  line-height: 21px;
  font-size:14px;
  color:#000;
  font-family: Arial, Helvetica, sans-serif;
  margin-bottom: 5px;
}
.content-wrp .content .img-decription{
  margin-bottom: 13px;
}
.content-wrp .content .state{
  color:#fff;
}
.content-wrp .content .state .text{
  display: inline-block;
  font-size: 10px;
  font-weight: bold;
  color:#808080;
}
.content-wrp .content .state image{
  display: inline-block;
  margin-left: 250px;
}