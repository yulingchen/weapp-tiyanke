      </view>
      <view class="right"> <image src="../../../assets/images/right.png"  background-size="cover"></image></view>
    </view>

    <view class="menu-item" bindtap="gotoMyShare">
      <view class="left" >
        <image src="../../../assets/images/me-share.png" class="menu-item-icon" background-size="cover"></image>
