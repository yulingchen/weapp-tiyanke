<view class="usercenter" >
  <view class="header" >
    <view  class="userinfo">
      <image class="userinfo-avatar" src="../../../assets/images/share_avatar.png"  background-size="cover"></image>
      <view>
        <view class="userinfo-nickname">哒哒</view>
