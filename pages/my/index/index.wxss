.usercenter{
  background-color: #efefef;
  min-height:100%;
  border-top:1px solid #eee;
  border-bottom:1px solid #eee;
}
.header{
  display:flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
  border-top:1px solid #eee;
  border-bottom:1px solid #eee;
  background-color:#C81623;
  padding: 30rpx;
}
.userinfo {
  display: flex;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.userinfo-nickname {
  color: #fff;
  font-size: 30rpx;
}

.userinfo-lv{
  color: #fff;
  margin-top: 20rpx; 
  font-size: 28rpx;  
}

.usermotto {
  margin-top: 200px;
}
.menu-container{
  margin-top: 15rpx;
  border-bottom:1px solid #eee;
  border-top:1px solid #eee;
}
.menu-item{
  display:flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff ;
  padding: 20rpx ;
  font-size: 28rpx;
  color: #4d5152;
  border-bottom:1px solid #eee;
}
.menu-item:last-of-type{
  border-bottom: none;
}
.menu-item .left{
  display: flex;
  align-items:center;
  font-size: 28rpx;
}

.menu-item-icon{
  width: 48rpx;
  height: 48rpx;
  margin-right:20rpx;
}

.right{
  width: 15px;
  height: 15px;
}
.right image{
  width: 100%;
  height: 100%;
}