.my-taste-page{
  border-top: 1px solid #eee;
}
.my-taste-page .taste-item{
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #eee;
  margin-bottom: 0;
}

.my-taste-page .taste-item .top{
  display: flex;
  justify-content: space-between;
}

.my-taste-page .taste-item .top .left{
  display: flex;
  margin-bottom: 30rpx;
}
.my-taste-page .taste-item .top .left image{
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.my-taste-page .taste-item .top .left .name{
  color:aqua;
  font-size: 30rpx;
}

.my-taste-page .taste-item .top .left .time{
  color: #666;
  font-size: 26rpx;
}

.my-taste-page .taste-item .top .right{
  font-size: 28rpx;
}