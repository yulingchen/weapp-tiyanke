.my-taste-page{
  border-top: 1px solid #eee;
}
.my-taste-page .taste-item{
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #eee;
  margin-bottom: 0;
}

.my-taste-page .taste-item .top{
  display: flex;
  justify-content: space-between;
}

.my-taste-page .taste-item .top .left{
  display: flex;
  margin-bottom: 30rpx;
}
.my-taste-page .taste-item .top .left image{
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.my-taste-page .taste-item .top .left .name{
  color:aqua;
  font-size: 30rpx;
}

.my-taste-page .taste-item .top .left .time{
  color: #666;
  font-size: 26rpx;
}

.my-taste-page .taste-item .top .right{
  font-size: 28rpx;
}

.content-wrp{
  padding: 14px 11px 9px 11px;
  border-bottom: 1px solid #ccc;
  display: flex;
}
.content-wrp .avatar{
  display: inline-block;
  vertical-align: top;
  margin-right: 9px;
}
.content-wrp .content{
  display: inline-block;
}
.content-wrp .content .author{
  display: inline-block;
  line-height: 21px;
  font-size:14px;
  color:#576B95;
}

.content-wrp .content .decription{
  line-height: 21px;
  font-size:14px;
  color:#000;
  margin-bottom: 5px;
}
.content-wrp .content .img-decription{
  margin-bottom: 13px;
}
