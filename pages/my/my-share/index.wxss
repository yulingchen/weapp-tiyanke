}*/
.content-wrp .content .img-decription .img1{
  width: 50%;
  margin-right: 10rpx;
  height: 120px
}
.content-wrp .content .img-decription .img3{
  width: 30%;
  margin-right: 10rpx;
  height: 80px;
}
.content-wrp .content .state{
  color:#fff;
}
.content-wrp .content .state .text{
  display: inline-block;
  font-size: 24rpx;
  color:#999;
}
.content-wrp .content .state image{
  display: inline-block;
  margin-left: 250px;
}

